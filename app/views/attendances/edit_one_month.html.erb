<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <h1>勤怠編集画面</h1>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日時</th>
          <th>曜日</th>
          <th>出勤時間</th>
          <th>退勤時間</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
          <% if day.worked_approval? %>
            <%= attendance.hidden_field :started_at,  value: day.approval_started %>
            <%= attendance.hidden_field :finished_at, value: day.approval_finished %>
          <% end %>  
          <%= attendance.hidden_field :worked_change, value: "0" %>
          <%= attendance.hidden_field :worked_status, value: "worked_applying" %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td>
                <% if day.worked_on.wday == 0 %>
                  <font color="Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
                <% elsif day.worked_on.wday == 6 %>
                  <font color="Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
                <% else %>
                  <%= $days_of_the_week[day.worked_on.wday] %>
                <% end %>
              </td>
              <% if !current_user.admin? && (Date.current < day.worked_on) %>
                <td><%= attendance.time_field :applying_started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :applying_finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <td><%= attendance.time_field :applying_started_at, class: "form-control" %></td>
                <td><%= attendance.time_field :applying_finished_at, class: "form-control" %></td>
              <% end %> 
              <td><%= attendance.check_box :next_day, {:checked => false}, "true", "false" %></td>
              <td>
                <% if day.started_at.present? && day.finished_at.present? %>
                  <% if day.next_day.present? && day.next_day == "true" %>
                    <%= working_times_tomorrow(day.started_at, day.finished_at) %>
                  <% elsif day.next_day.present? && day.next_day == "false" %>
                    <%= working_times(day.started_at, day.finished_at) %>
                  <% end %>
                <% end %>  
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td>
                <%= attendance.select :worked_request_sign, @superiors.pluck(:name), {:include_blank => true}, {class: "form-control"} %>
              </td>
            </tr>
          <% end %>    
        <% end %>
      </tbody>
    </table>
    <div class="center">
      <%= f.submit "まとめて更新", class: "btn btn-lg btn-primary" %>
      <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-default" %>
    </div>
  </div>
<% end %>  