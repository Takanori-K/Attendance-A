<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>【<%= l(@first_day, format: :middle) %>】勤怠管理表</td>
      <td>指定勤務時間<%= format_basic_info(@user.work_time) %></td>
      <td>基本時間<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<% if current_user?(@user) %>
  <% if current_user.superior? %>
    <% if @notice.blank? %>
      <h4>【残業申請のお知らせ】</h4><br>
    <% end %>
    <% count = 0 %>
    <% @users.each do |user| %>
      <% attendances = Attendance.where(user_id: user.id) %>
        <% attendances.each do |at| %>
          <% count += 1 %>
            <% if at.instructor_sign.present? && current_user.name == at.instructor_sign && count == 1 %>
              <div class="overtime-info">
                  <%= link_to "【残業申請のお知らせ】", edit_overtime_info_path(user_id: user, id: at.id), remote: true, style: "color:red" %>
                  <font color="red"><%= @count %>件の通知があります</font>
              </div>    
               <% break %> 
            <% end %>
        <% end %>  
    <% end %>
  <% end %>
<% end %>

<% if current_user?(@user) %>
  <div class="btn-users-show">
    <%= link_to "← 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>
    <%= link_to "１ヶ月の勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
    <%= link_to "次月へ →", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
  </div>
  <%= link_to "CSV出力", user_path(format: :csv), class: "btn btn-primary" %>
<% end %>
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <% if current_user?(@user) %>
          <th></th>
        <% end %>
        <th>日付</th>
        <th>曜日</th>
        <th>勤怠登録</th>
        <th>出勤時間</th>
        <th>退社時間</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>終了予定時間</th>
        <th>指示者確認㊞</th>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
      <tr>
        <% if current_user?(@user) %>
          <td>
            <%= link_to "残業申請", edit_overtime_path(@user, params:{day: day.worked_on, youbi: $days_of_the_week[day.worked_on.wday]}), remote: true, class: "btn btn-primary" %>
          </td>
        <% end %>
        <td><%= l(day.worked_on, format: :short) %></td>
        <td><%= $days_of_the_week[day.worked_on.wday] %></td>
        <td>
          <% if btn_text = attendance_state(day) && current_user?(@user) %>
            <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
          <% end %>  
        </td>
        <td>
          <%= l(day.started_at, format: :time) if day.started_at.present? %>
        </td>
        <td>
          <%= l(day.finished_at, format: :time) if day.started_at.present? && day.finished_at.present? %>
        </td>
        <td>
          <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
          <% end %>  
        </td>
        <td><%= day.note %></td>
        <td><%= l(day.scheduled_end_time, format: :time) if day.scheduled_end_time.present? %></td>
        <td>
          <% if day.instructor_sign.present? %>
            <span>申請中</span>
          <% end %>  
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>
</div>

<div id="edit-overtime-work" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="edit-overtime-work-info" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>